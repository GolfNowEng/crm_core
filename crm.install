<?php

/**
 * @file
 * Install, update and uninstall functions for the crm module.
 */

/**
 * Implements hook_install().
 */
function crm_install() {
  $existing = field_read_field('endpoints', array('include_inactive' => TRUE));
  if (empty($existing)) {
    $field = array(
      'field_name' => 'endpoints',
      'cardinality' => FIELD_CARDINALITY_UNLIMITED,
      'type' => 'relation_endpoint'
    );
    field_create_field($field);
  }
}
